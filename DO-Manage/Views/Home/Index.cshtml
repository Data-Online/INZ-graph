@using Resources;

@{
    ViewBag.Title = String.Format(Resource.Home_WelcomeMessage);
}
<h2>@ViewBag.Title</h2>
<div>
    <section id="dashboard">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>@ViewBag.Title</h2>
                    @*<hr class="star-primary">*@
                </div>
            </div>
            <div class="divider-10"></div>
            <div class="row">
                @if (Request.IsAuthenticated)
                {
                    <text>
                        <div class="col-sm-4 dashboard-item">
                            <a href="@Url.Action("Index", "Contacts")" class="dashboard-link" data-toggle="modal">
                                <div class="caption">
                                    <div class="caption-content">
                                        <i class="fa fa-external-link fa-3x"></i>
                                    </div>
                                </div>
                                <img src="~/Content/ManageContacts.png" class="img-responsive" alt="Manage Contacts">
                            </a>
                            <h3>Manage Contacts</h3>
                        </div>
                    </text>
                }
                else
                {
                    <div>
                        <h2 style="text-align:center">@Resource.Home_SignIn</h2>
                    </div>
                }
            </div>
        </div>
    </section>
</div>