@using Resources;


@{
    ViewBag.AppName = Resource.App_Name;
    var accountType = Session["AccountType"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css")
    @* @Styles.Render("https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap-theme.min.css")*@
    @Styles.Render("~/Content/freelancer.css")
    @Scripts.Render("https://ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.6.2.js")

    <!-- Custom Fonts -->
    <link href="Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">


</head>
<body id="page-top">
    <div>
        <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="#page-top">@Resource.Company_Name</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    @if (Request.IsAuthenticated)
                    {
                        <text>
                            <ul class="nav navbar-nav navbar-right">
                                <li class="page-scroll">@Html.ActionLink("Manage Contacts", "Index", "Contacts")</li>
                                <li>@Html.ActionLink("Source Contacts", "Index", "SourceContacts")</li>
                                @if (accountType != "msa")
                                {
                                    <li>@Html.ActionLink("Admin scopes", "Index", "Admin")</li>
                                }
                            </ul>
                        </text>
                    }
                    @Html.Partial("_LoginPartial")
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewBag.AppName</p>
        </footer>
    </div>
    @Scripts.Render("~/Scripts/ui-helpers.js")
    @Scripts.Render("https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.1.min.js")
    @Scripts.Render("https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js")

    @Scripts.Render("~/Scripts/jqBootstrapValidation.js")
    @Scripts.Render("~/Scripts/contact_me.js")
    @Scripts.Render("~/Scripts/freelancer.min.js")

    @RenderSection("scripts", required: false)
</body>
</html>